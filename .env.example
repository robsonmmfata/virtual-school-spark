# Configurações do Banco de Dados PostgreSQL
DATABASE_URL=postgresql://usuario:senha@localhost:5432/virtual_school

# Configurações individuais do banco (alternativa ao DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=virtual_school
DB_USER=seu_usuario
DB_PASSWORD=sua_senha

# Configurações da aplicação
NODE_ENV=development
PORT=3000

# JWT Secret (para autenticação futura)
JWT_SECRET=sua_chave_secreta_super_segura_aqui

# Configurações de email (opcional, para notificações futuras)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_de_app

# Configurações de upload (opcional, para anexos futuros)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Configurações de cache (opcional)
REDIS_URL=redis://localhost:6379

# Configurações de logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
